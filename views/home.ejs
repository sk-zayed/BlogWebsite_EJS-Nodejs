<%- include("partials/header") -%>

    <h1>Home</h1>
    <p>
        <%= homeContent %>
    </p>

    <% posts.forEach(function(post){ %>
        <h1>
            <%= post.title %>
        </h1>
        <p>
            <%= (post.content).slice(0, 100) + "..." %>
                <a href="post/<%= post._id %>">Read more</a>
        </p>
    <% }); %>

